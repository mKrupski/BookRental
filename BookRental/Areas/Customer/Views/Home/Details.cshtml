@model BookRental.Domain.Models.BookCart

<form method="post">
    <input hidden asp-for="BookId" />
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.Book.Title</h1>
                    <p class="text-warning">by @Model.Book.Author</p>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="badge badge-warning pt-2" style="height:30px;">@Model.Book.Category.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <h5 class="text-muted">Publisher : @Model.Book.Publisher</h5>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Book.Description)</p>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Book.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a href="javascript:history.go(-1)" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        @if (Model.Book.Status == BookStatus.ToRent)
                        {
                    <button type="submit" value="Borrow" class="btn btn-primary btn-square btn-lg form-control" style="height: 50px;">Borrow this book</button> }
                                else
                                {
                    <button type="button" class="btn btn-danger btn-square btn-lg form-control" style="height: 50px;">Unavailable</button>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
